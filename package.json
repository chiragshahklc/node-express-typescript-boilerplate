{
  "name": "express-typescript-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for typescript based Node + Express project.",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node -r dotenv/config .",
    "lint": "eslint . --ext .ts",
    "watch": "node -r dotenv/config -r ts-node/register src/index.ts dotenv_config_path=.env.development",
    "dev": "nodemon -L"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chiragshahklc/node-express-typescript-boilerplate.git"
  },
  "keywords": [
    "express",
    "typescript"
  ],
  "author": {
    "name": "Chirag Shah",
    "email": "chiragshahklc@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "pino": "^6.6.1",
    "pino-http": "^5.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/helmet": "0.0.48",
    "@types/node": "^14.11.1",
    "@types/pino": "^6.3.1",
    "@types/pino-http": "^5.0.5",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.9.0",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.2.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "bugs": {
    "url": "https://github.com/chiragshahklc/node-express-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/chiragshahklc/node-express-typescript-boilerplate#readme"
}
